{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Raylib File",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lraylib",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile Raylib file"
        }
    ]
}
